<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/dashboard_title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@color/maps_blue">
        <!--<TextView-->
            <!--style="@style/BoldTitleWhite"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/waiting_for_location"/>-->
        <TextView
            android:id="@+id/dashboard_area_text"
            style="@style/BoldTitleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ljubljana"/>
        <LinearLayout
            android:layout_below="@id/dashboard_area_text"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/SubtitleWhite"
                android:id="@+id/dashboard_temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23Â°C"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/dot_separator"/>
            <TextView
                style="@style/SubtitleBoldWhite"
                android:textColor="@color/aqi_moderate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODERATE"/>
            <View
                android:layout_margin="5dp"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/dot_separator"/>
            <TextView
                style="@style/SubtitleWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78%"/>
        </LinearLayout>
    </RelativeLayout>
    <fragment android:name="com.citisense.vidklopcic.citisense.fragments.AqiOverview"
        android:id="@+id/dashboard_bar_chart_fragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/dashboard_title_bar_layout"
        android:layout_above="@+id/dashboard_summary_favorites_layout"
        tools:layout="@layout/fragment_aqi_overview" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dashboard_summary_favorites_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true">

    </LinearLayout>
</RelativeLayout>
